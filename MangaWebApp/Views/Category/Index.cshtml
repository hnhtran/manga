@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-sm-start">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary btn-sm"><i class="bi bi-plus-circle"></i> &nbsp; Create New</a>
        </div>
    </div>
</div>

<table class="table table-primary table-bordered border-white table-responsive-md" style="width:100%">
    <thead>
        <tr>
        <th>Name</th>
        <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>